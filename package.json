{
  "name": "mefody.dev",
  "version": "0.0.1",
  "homepage": "/",
  "private": true,
  "dependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@11ty/eleventy-fetch": "^3.0.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.1.0",
    "eleventy-plugin-reading-time": "0.0.1",
    "html-minifier": "^4.0.0",
    "hyphen": "^1.6.4",
    "netlify-plugin-cache": "^1.0.3"
  },
  "scripts": {
    "start": "ELEVENTY_ENV=development eleventy --serve --quiet",
    "prod": "npm run build:prod && npx live-server _public",
    "build": "rm -rf _public && eleventy && gulp build",
    "build:prod": "ELEVENTY_ENV=production npm run build",
    "fix": "eslint --fix && stylelint --fix \"src/styles/**/*.css\"",
    "lint:css": "stylelint \"src/styles/**/*.css\"",
    "lint:editorconfig": "editorconfig-checker",
    "lint:js": "eslint .",
    "lint": "npm run lint:editorconfig && npm run lint:css && npm run lint:js",
    "prepare": "npx simple-git-hooks",
    "generate-weekly-links": "node _11ty/scripts/weekly-links.js"
  },
  "devDependencies": {
    "@babel/core": "^7.19.0",
    "@babel/preset-env": "^7.19.0",
    "@hirusi/eleventy-plugin-safe-external-links": "^0.14.3",
    "autoprefixer": "^10.4.9",
    "datauri": "^4.1.0",
    "date-fns": "^3.3.1",
    "del": "^6.0.0",
    "dotenv": "^16.0.2",
    "editorconfig-checker": "^5.1.2",
    "eslint": "^8.23.1",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-postcss": "^9.0.1",
    "gulp-replace": "^1.1.3",
    "gulp-rev": "^9.0.0",
    "gulp-rev-rewrite": "^5.0.0",
    "gulp-terser": "^2.1.0",
    "image-size": "^1.0.2",
    "jsdom": "^18.1.0",
    "lint-staged": "^11.0.0",
    "lodash": "^4.17.21",
    "minify-xml": "^3.4.0",
    "netlify-plugin-webmentions": "^1.1.1",
    "node-fetch": "^2.0.0",
    "postcss": "^8.4.16",
    "postcss-color-hex-alpha": "^8.0.4",
    "postcss-csso": "^6.0.1",
    "postcss-import": "^15.0.0",
    "sanitize-html": "^2.7.1",
    "sharp": "^0.29.3",
    "simple-git-hooks": "^2.8.0",
    "stylelint": "^14.11.0",
    "stylelint-order": "^5.0.0",
    "vinyl-paths": "^3.0.1",
    "workbox-build": "^6.5.4"
  },
  "lint-staged": {
    "*": [
      "editorconfig-checker"
    ],
    "*.js": [
      "eslint --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run lint"
  }
}
